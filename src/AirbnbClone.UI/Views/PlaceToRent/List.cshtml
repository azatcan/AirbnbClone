
@using Airbnb.Domain.Entities;
@model List<PlaceToRent>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@if (Model.Count == 0)
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="alert alert-success">Herhangi bi ilan yok</div>
            </div>
        </div>
    </div>
}
else
{
    <table class="table table-bordered table table-striped">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>NumberOfrooms</th>
            <th>BathroomNumbers</th>
            <th>Area</th>
            <th>Address</th>
            <th>PlaceToRentImages</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.NumberOfrooms</td>
                    <td>@item.BathroomNumbers</td>
                    <td>@item.Area</td>
                    <td>@item.Address</td>
                    <td><a class="btn btn-success" asp-action="PlaceToRentImages" asp-route-id="@item.Id"></a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"></a></td>
                    <td><a class="btn btn-success" asp-action="Update" asp-route-id="@item.Id"></a></td>
                </tr>
            }


        </tbody>
    </table>
    <a class="btn btn-primary" asp-action="Create">Ekle</a>
}





